{# Labels #}

{% block form_label %}
{% spaceless %}
    {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' align')|trim}) %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label>
{% endspaceless %}
{% endblock form_label %}

{# Rows #}

{% block repeated_row %}
{% spaceless %}
    {{ block('form_rows') }}
{% endspaceless %}
{% endblock repeated_row %}

{% block form_row %}
{% spaceless %}
    <div id="{{ form.getVar('id') }}-div" class="field">
        {{ form_label(form, label|default(null)) }}
        {#
        If the child is a compound form, the errors are rendered inside
        the container. See also block form_rows.
        #}
        {% if not compound %}
            {{ form_errors(form) }}
        {% endif %}
        {{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block hidden_row %}
    {{ form_widget(form) }}
{% endblock hidden_row %}

{# Misc #}

{% block form_enctype %}
{% spaceless %}
    {% if multipart %}enctype="multipart/form-data"{% endif %}
{% endspaceless %}
{% endblock form_enctype %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <ul>
        {% for error in errors %}
            <li>{{
                error.messagePluralization is null
                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
            }}</li>
        {% endfor %}
    </ul>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_rest %}
{% spaceless %}
    {% for child in form %}
        {% if not child.rendered %}
            {{ form_row(child) }}
        {% endif %}
    {% endfor %}
{% endspaceless %}
{% endblock form_rest %}

{# Support #}

{% block form_rows %}
{% spaceless %}
    {{ form_errors(form) }}
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock form_rows %}

{% block widget_attributes %}
{% spaceless %}
    id="{{ id }}" name="{{ full_name }}"{% if read_only %} readonly="readonly"{% endif %}{% if disabled %} disabled="disabled"{% endif %}{% if required %} required="required"{% endif %}{% if max_length %} maxlength="{{ max_length }}"{% endif %}{% if pattern %} pattern="{{ pattern }}"{% endif %}
    {% for attrname, attrvalue in attr %}{% if attrname in ['placeholder', 'title'] %}{{ attrname }}="{{ attrvalue|trans({}, translation_domain) }}" {% else %}{{ attrname }}="{{ attrvalue }}" {% endif %}{% endfor %}
{% endspaceless %}
{% endblock widget_attributes %}

{% block widget_container_attributes %}
{% spaceless %}
    {% if id is not empty %}id="{{ id }}" {% endif %}
    {% for attrname, attrvalue in attr %}{{ attrname }}="{{ attrvalue }}" {% endfor %}
{% endspaceless %}
{% endblock widget_container_attributes %}

{% block neutron_datetimepicker_row %} 
{% spaceless %} 
<div class="field">
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' grid3')|trim}) %}
    {% if(configs['range_id'] is defined) %} 
        {% set rangetime_id = 'id=' ~ configs['range_id'] %} 
    {% else %} 
        {% set rangetime_id = '' %} 
        {{ form_label(form, label|default(null), {'attr': {'for' : id}}) }} 
    {% endif %} 
    
    {{ block('form_widget_simple') }}
    
    <span  {{ rangetime_id }} class="neutron_datetimepicker" style="display: none">
        {{ configs|merge({'id': id})|json_encode|raw }}
    </span>
</div>
{% endspaceless %} 
{% endblock neutron_datetimepicker_row %} 

{% block neutron_chosen_row %}
{% spaceless %}
<div class="field">
    {{ form_label(form, label|default(null), {'attr': {'for' : id}}) }} 
    {% set attr = {
        "data-placeholder": empty_value,
        "class": "chzn-select"
    }|merge(attr) %}
    
    {{ block('choice_widget') }}

    <span class="neutron_chosen" style="display:none">
        {{ configs|merge({'id': id})|json_encode|raw }}
    </span>
    
</div>
{% endspaceless %}
{% endblock neutron_chosen_row %}


{% block neutron_select_row %}
{% spaceless %}
<div class="field">
    {{ form_label(form, label|default(null), {'attr': {'for' : id}}) }} 
    
    {{ block('choice_widget') }}
    <span class="neutron_select" style="display:none">
        {{ configs|merge({'id': id})|json_encode|raw }}
    </span>
</div>
{% endspaceless %}
{% endblock neutron_select_row %}

{% block neutron_plain_row %} 
{% spaceless %}   
    <div class="field">
        {{ block('form_label') }}
        <div class="controls">
            <p><strong>{{ value|escape }}</strong></p>
        </div>
    </div>
{% endspaceless %} 
{% endblock neutron_plain_row %} 


