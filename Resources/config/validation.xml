<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Neutron\AdminBundle\Entity\MainTree">
        
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
	        <option name="fields">slug</option>
	        <option name="message">slug.already_used</option>
	        <option name="groups">
                <value>category.slug</value>
            </option>
   	    </constraint>       


        <property name="title">
        	<constraint name="NotBlank">
                <option name="message">title.blank</option>
                <option name="groups">
                    <value>create</value>
               	    <value>update</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">title.short</option>
                <option name="groups">
                    <value>create</value>
                    <value>update</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">title.long</option>
                <option name="groups">
                    <value>creation</value>
                </option>
            </constraint>
        </property>
        
        <property name="slug">
        	<constraint name="NotBlank">
                <option name="message">slug.blank</option>
                <option name="groups">
                    <value>category.slug</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">slug.short</option>
                <option name="groups">
                    <value>category.slug</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">slug.long</option>
                <option name="groups">
                    <value>category.slug</value>
                </option>
            </constraint>
        </property>
        
        <property name="type">
        	<constraint name="NotBlank">
                <option name="message">type.blank</option>
                <option name="groups">
                    <value>create</value>
                </option>
            </constraint>
        </property>
        
        <property name="externalUri">
        	<constraint name="Url">
                <option name="message">externalUri.url.invalid</option>
                <option name="groups">
                    <value>category.external</value>
                </option>
            </constraint>
            
            <constraint name="NotBlank">
                <option name="message">externalUri.blank</option>
                <option name="groups">
                    <value>category.external</value>
                </option>
            </constraint>
            
        </property>
        
    </class>

</constraint-mapping>
