<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="neutron_admin.dashboard" pattern="/">
        <default key="_controller">NeutronAdminBundle:Default:index</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_admin.category.management" pattern="/category">
        <default key="_controller">neutron_admin.controller.category:indexAction</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_admin.category.create" pattern="/category/create/{parentId}">
        <default key="_controller">neutron_admin.controller.category:createAction</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_admin.category.update" pattern="/category/update/{nodeId}">
        <default key="_controller">neutron_admin.controller.category:updateAction</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_admin.category.delete" pattern="/category/delete/{nodeId}">
        <default key="_controller">neutron_admin.controller.category:deleteAction</default>
        <requirement key="_method">GET|POST</requirement>
    </route>

    
</routes>
