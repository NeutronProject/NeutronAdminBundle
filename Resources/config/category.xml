<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="neutron_admin.datagrid.tree_management.class">Neutron\AdminBundle\DataGrid\TreeManagement</parameter>
    </parameters>
    
    <services>

        <service id="neutron_admin.form.category" factory-method="createNamed" 
        	factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%neutron_admin.category.form.name%</argument>
            <argument>%neutron_admin.category.form.type%</argument>
        </service>

        <service id="neutron_admin.form.type.category.general" class="Neutron\AdminBundle\Form\Type\Category\GeneralType">
            <argument type="service" id="neutron_admin.form.event_subscriber.category"/>
            <argument>%neutron_admin.category.tree_data_class%</argument>
            <argument type="service" id="neutron_layout.plugin_provider" />
            <tag name="form.type" alias="neutron_admin_form_category_general" />
        </service>
        
        <service id="neutron_admin.form.type.category" class="Neutron\AdminBundle\Form\Type\CategoryFormType">
            <tag name="form.type" alias="neutron_admin_form_category" />
        </service>

        <service id="neutron_admin.form.handler.category.default" class="Neutron\AdminBundle\Form\Handler\CategoryHandler" scope="request" public="false">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="neutron_admin.form.category" />
            <argument type="service" id="neutron_component.form.helper.form_helper" />
            <argument type="service" id="request" />
            <argument type="service" id="router" />
            <argument type="service" id="translator" />
            <argument type="service" id="neutron_admin.acl.manager" />
            <argument type="service" id="neutron_layout.plugin_provider" />
            <argument type="service" id="neutron_tree.manager.factory" />
			<argument>%neutron_admin.category.tree_data_class%</argument>
        </service>
        
        <service id="neutron_admin.datagrid.tree_management" 
        	class="%neutron_admin.datagrid.tree_management.class%"
        	scope="request"
       	>
        	<argument type="service" id="neutron_data_grid.factory" />
        	<argument type="service" id="doctrine.orm.entity_manager" />
        	<argument type="service" id="translator" />
        	<argument type="service" id="router" />
        </service>
        
        <service id="neutron_admin.datagrid.factory.tree_management" 
        	class="Neutron\Bundle\DataGridBundle\DataGrid\DataGrid"
        	factory-service="neutron_admin.datagrid.tree_management"
        	factory-method="build"
        >
        	<tag name="neutron_data_grid.datagrid" alias="tree_management" />
        </service>
        
        <service id="neutron_admin.event_listener.datagrid.tree_management" 
        	class="Neutron\AdminBundle\EventListener\DataGrid\MainTreeListener">
            <argument type="service" id="translator" />
            <tag name="kernel.event_listener" event="neutron_datagrid.onDataResponse" method="onDataResponse" />
        </service>
        
        <service id="neutron_admin.event_subscriber.doctrine.main_tree" class="Neutron\AdminBundle\EventSubscriber\Doctrine\MainTreeSubscriber">
            <argument type="service" id="neutron_component.util.filter.slug" />
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

    </services>

</container>
